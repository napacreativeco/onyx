{{ 'component--newsletter-signup.css' | asset_url | stylesheet_tag }}

<style>
    .newsletter-signup-row {
        margin: 0 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0 {{ section.settings.side_padding }}px;
    }

    .newsletter-signup-row input[type="email"] {
        font-size: {{ section.settings.email_placeholder_size }}px;
    }

    .newsletter-signup-row input[type="submit"] {
        font-size: {{ section.settings.email_placeholder_size }}px;
    }
</style>

<div class="newsletter-signup-row">
    <div class="left">
        <h2 class="title" style="font-size: {{ section.settings.section_title_size }}px;">{{ section.settings.title }}</h2>
        <p class="description">{{ section.settings.description }}</p>
    </div>
    <div class="right">
        {% form 'customer' %}
            <input type="email" placeholder="{{ section.settings.email_placeholder }}" />
            <input type="submit" value="{{ section.settings.submit_text }}">
        {% endform %}
    </div>
</div>

{% schema %}
    {
      "name": "Newsletter Signup",
      "tag": "section",
      "class": "newsletter-signup",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Sign up to our Newsletter"
        },
        {
            "type": "range",
            "id": "section_title_size",
            "label": "Section Title Size",
            "min": 24,
            "max": 64,
            "step": 1,
            "default": 44
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        },
        {
          "type": "text",
          "id": "email_placeholder",
          "label": "Email Placeholder",
          "info": "The placeholder text in the email field",
          "default": "hello@email.com"
        },
        {
            "type": "range",
            "id": "email_placeholder_size",
            "label": "Email Size",
            "min": 18,
            "max": 44,
            "step": 1,
            "default": 34
        },
        {
          "type": "text",
          "id": "submit_text",
          "label": "Subscribe Text",
          "info": "The submit button text",
          "default": "Subscribe"
        },
        {
            "type": "range",
            "id": "side_padding",
            "label": "Side Padding",
            "min": 0,
            "max": 24,
            "step": 1,
            "default": 12
        },
        {
            "type": "range",
            "id": "bottom_margin",
            "label": "Space Below",
            "default": 60,
            "min": 0,
            "max": 100,
            "step": 1
        }
      ],
      "blocks": [
        {
            "type": "embed",
            "name": "Embed Code",
            "limit": 1,
            "settings": [
                {
                    "type": "textarea",
                    "id": "embed_coded",
                    "label": "Embed Code",
                    "info": "Paste an embed code here"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Newsletter Signup"
        }
      ],
      "enabled_on": {
        "templates": ["*"]
      }
    }
{% endschema %}