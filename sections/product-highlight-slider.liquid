{{ 'component--product-highlight-slider.css' | asset_url | stylesheet_tag }}

<div class="product-highlight-slider-row">
    <div class="product-highlights swiper">
        <div class="swiper-wrapper">
            
            {% for block in section.blocks %}
                <div class="swiper-slide">

                    <div class="image">
                        <img width="100%" height="100%" src="{{ block.settings.image | image_url: width: 2200  }}" alt="{{ block.settings.image.alt }}" />
                    </div>

                    <div class="overlay">
                        <div class="subtitle">
                            <p>{{ block.settings.subtitle }}</p>
                        </div>
                        <div class="title">
                            <h2>{{ block.settings.title }}</h2>
                        </div>
                        <div class="text">
                            <p>{{ block.settings.text }}</p>
                        </div>
                        <div class="spotlight-controls">
                            <div class="view-more">
                                <a class="spotlight-view-more" href="{{ section.settings.spotlight_slider_collection.url }}" title="{{ section.settings.spotlight_slider_collection.title }}">
                                    {{ 'View more' | escape }}
                                </a>
                            </div>
                            <div class="spotlight-slideshow-controls">
                                <div class="spotlight-prev spotlight-control">{% render 'icon--arrow-left' %}</div>
                                <div class="spotlight-next spotlight-control">{% render 'icon--arrow-right' %}</div>
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
            
        </div>
        

        <div class="swiper-pagination"></div>

    </div>
</div>

