{{ 'component--tab-cloud.css' | asset_url | stylesheet_tag }}

<style>
    .tab-cloud-row {
        margin: 0 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0 {{ section.settings.side_padding }}px;
    }
</style>

<div class="tab-cloud-row">
    <div class="title">
        <h2>{{ section.settings.heading }}</h2>
    </div>

    <ul class="tab-list">
        {% for block in section.blocks %}
            <li class="tab">
                <a style="font-size: {{ section.settings.tab_text_size }}px;" href="{{ block.settings.tab_url }}" title="{{ block.settings.tab_text }}">{{ block.settings.tab_text }}</a>
            </li>
        {% endfor %}
    </ul>
</div>

{% schema %}
    {
      "name": "Tab Cloud",
      "tag": "section",
      "class": "tab-cloud has-section-padding",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
            "type": "range",
            "id": "tab_text_size",
            "label": "Tab Text Size",
            "min": 14,
            "max": 34,
            "step": 1,
            "default": 24
        },
        {
            "type": "range",
            "id": "side_padding",
            "label": "Side Padding",
            "min": 0,
            "max": 40,
            "step": 1,
            "default": 0
        },
        {
            "type": "range",
            "id": "bottom_margin",
            "label": "Space Below",
            "default": 60,
            "min": 0,
            "max": 100,
            "step": 1
        }
      ],
      "blocks": [
        {
            "type": "tab",
            "name": "Tab",
            "settings": [
                {
                    "type": "text",
                    "id": "tab_text",
                    "label": "Text"
                },
                {
                    "type": "url",
                    "id": "tab_url",
                    "label": "Destination"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Tab Cloud"
        }
      ],
      "enabled_on": {
        "templates": ["*"]
      }
    }
{% endschema %}