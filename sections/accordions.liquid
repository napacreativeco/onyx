{{ 'component--accordion-group.css' | asset_url | stylesheet_tag }}

<style>
    .accordion-group-row {
        margin: 0 0 {{ section.settings.bottom_margin }}px 0;
        padding: 0 {{ section.settings.side_padding }}px;
    }
</style>

<div class="accordion-group-row">
    <div class="top">
        <div class="title">
            <h2 style="font-size: {{ section.settings.section_title_size }}px;" class="section-title">{{ section.settings.title }}</h2>
        </div>
    </div>

    <div class="accordion-list">
        {% for block in section.blocks %}
            <details>
                <summary>{{ block.settings.accordion_title }}</summary>
                <div class="accordion-body">
                    {{ block.settings.accordion_body }}
                </div>
            </details>
        {% endfor %}
    </div>
</div>

{% schema %}
    {
      "name": "Accordion Group",
      "tag": "section",
      "class": "accordion-group",
      "settings": [
        {
            "type": "text",
            "id": "title",
            "label": "Section Title"
        },
        {
            "type": "range",
            "id": "section_title_size",
            "label": "Section Title Size",
            "min": 24,
            "max": 64,
            "step": 1,
            "default": 44
        },
        {
            "type": "range",
            "id": "accordion_title_size",
            "label": "Accordion Title Size",
            "min": 24,
            "max": 44,
            "step": 1,
            "default": 34
        },
        {
            "type": "range",
            "id": "side_padding",
            "label": "Side Padding",
            "min": 0,
            "max": 24,
            "step": 1,
            "default": 12
        },
        {
            "type": "range",
            "id": "bottom_margin",
            "label": "Space Below",
            "default": 60,
            "min": 0,
            "max": 100,
            "step": 1
        }
      ],
      "blocks": [
        {
            "type": "accordion",
            "name": "Accordion",
            "settings": [
                {
                    "type": "text",
                    "id": "accordion_title",
                    "label": "Title"
                },
                {
                    "type": "richtext",
                    "id": "accordion_body",
                    "label": "Body"
                }
            ]
        }
      ],
      "presets": [
        {
          "name": "Accordion Group"
        }
      ],
      "enabled_on": {
        "templates": ["*"]
      }
    }
{% endschema %}